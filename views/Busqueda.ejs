        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Asociado-->
    //==================================================================================================
    case 6: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Coalquier otro usuario (Paciente)-->
    //==================================================================================================
    default:%>
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" /> Inicio
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="HistorialVistaPaciente">
        <h2 class="nav-2">
          <img src="/img/Icons/HistorialClinico.svg" class="icono" />
          Historial Clinico
        </h2>
      </div>
    </section>
    <%break; }
    //==================================================================================================
    // Contenido Busqueda de pacientes
    //==================================================================================================
    %>
    <h1>Busqueda Pacientes:</h1>
    <div class="input-area">
      <input name="BNombre" id="BNombre" type="text" placeholder="Nombre" class="f-inp" />
      <input name="BApellido" id="BApellido" type="text" placeholder="Apellido" class="f-inp" />
      <input name="BTelefono" id="BTelefono" type="text" placeholder="Correo / Teléfono" class="f-inp" />
      <button type="button" id="submit-button">Buscar</button>
    </div>
    <div id="ResultadosBusqueda">
        <!-- Aqui van los resultados de la busqueda en la base de datos -->
    </div><br><br>
  

    <!-- Copyright -->
    <div class="footer">
        <b> <%=Copy+" "+Empresa+" "+" "+Año+" v"+Ver %> </b>
    </div>
  </body>
</html>
