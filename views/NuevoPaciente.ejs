<!DOCTYPE html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <% //Este es el tiempo antes de que se actualice la pagina automaticamente (10 min.) %>
    <meta http-equiv="refresh" content="600">
    <title>Crear Paciente - DermaTotal</title>
    <link rel="stylesheet" href="/fonts/Fuentes.css" />
    <link rel="stylesheet" href="/css/NuevoPaciente.css" />
    <link rel="stylesheet" href="/css/EstiloGlobal.css" />
    <link rel="icon" href="/img/favicon.ico" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="/js/nuevoPaciente.js"></script>
  </head>

  <body>
    <%
    //==================================================================================================
    //La vista de carga
    //==================================================================================================
    %>
    <div id="LoadingLogo">
      <img src="/img/Logo.svg" alt="DermaTotal Logo" />
    </div>
    <%
    //==================================================================================================
    //El nav superior para todos
    //==================================================================================================
    %>
    <div class="main-header">
      <a href="/Dashboard"><img src="/img/LogoB.svg" alt="" class="Logo" /></a>
    </div>
    <div class="DropMenu">
      <div class="Perfil" id="Perfil">
        <img src="/img/UserIco.webp" alt="/img/UserIco.webp" />
      </div>
      <div class="Menu" id="Menu">
        <div class="UserMenu">
          <h2><%=Nombre%></h2>
          <b><%=TipUser%></b><br />
          <span><%=Empresa%></span>
        </div>
        <ul>
          <li><a href="#">Perfil</a></li>
          <li><a href="#">Tema</a></li>
          <li><a href="/logout">Cerrar Sesión</a></li>
        </ul>
      </div>
    </div>

    <section class="nav-bar">
      <!-- Aqui se generan los elementos del nav dependiendo del tipo de usuario -->
    </section>

    <!-- ================================================================================================== -->
    <!-- Contenido Creacion de Paciente -->
    <!-- ================================================================================================== -->
    
    <h1>Nuevo Paciente</h1>
    <div class="NuevoUsuario">
      <hr />
      <div class="ZonaDeFoto">
        <div id="ElecciondeFoto">
          <b>Tomar foto o</b>
          <a href="#">selecciona el archivo</a>
        </div>
      </div>
      <div class="DatosGenerales">
        <h2>Datos Generales:</h2>
        <div class="DatosGeneralesInputs">
          <input type="text" id="Nombre" placeholder="Nombre*" />
          <input type="text" id="ApellidoP" placeholder="Apellido Paterno" />
          <input type="text" id="ApellidoM" placeholder="Apellido Materno" />
          <input type="text" id="Telefono" placeholder="Teléfono" />
          <input type="text" id="Telefono2" placeholder="Teléfono Secundario" />
          <input type="text" id="Correo" placeholder="Correo" />
        </div>
        <div class="DatosDeSeleccion">
          <div class="FechaDeNacimiento">
            <b>Fecha de Nacimiento:</b>
            <input type="date" id="FechaDeNacimiento" value="" />
          </div>
          <div class="Sexo">
            <b>Sexo:</b>
            <select name="" id="Sexo">
              <option value="1">Masculino</option>
              <option value="2">Femenino</option>
            </select>
          </div>
        </div>
        <div>
          <h2>Crear cita: <input type="checkbox"></h2>
          <div id="NuevoPacienteyCita">
            <!-- Aquí va el contenido extra en caso de que quiera agendar una cita tambien -->
          </div>
        </div>
        <button type="button" id="submit-button">Crear Nuevo Paciente</button>
      </div>
    </div>
    <!-- Copyright -->
    <div class="footer">
        <!-- Aqui va el contenido del Footer -->
    </div>
  </body>
</html>
