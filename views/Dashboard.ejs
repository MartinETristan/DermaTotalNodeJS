<!DOCTYPE html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DashBoard - DermaTotal</title>
    <link rel="stylesheet" href="/fonts/Fuentes.css" />
    <link rel="stylesheet" href="/css/Dashboard.css" />
    <link rel="stylesheet" href="/css/EstiloGlobal.css" />
    <link rel="icon" href="/img/favicon.ico" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/navbar.js"></script>
  </head>

  <body>
    <%
    //==================================================================================================
    //La vista de carga
    //==================================================================================================
    %>
    <div id="LoadingLogo">
      <img src="/img/Logo.svg" alt="DermaTotal Logo" />
    </div>
    <%
    //==================================================================================================
    //El nav superior para todos
    //==================================================================================================
    %>
    <div class="main-header">
      <a href="/Dashboard"><img src="/img/LogoB.svg" alt="" class="Logo" /></a>
    </div>
    <div class="DropMenu">
      <div class="Perfil" id="Perfil">
        <img src="/img/UserIco.webp" alt="/img/UserIco.webp" />
      </div>
      <div class="Menu" id="Menu">
        <div class="UserMenu">
          <h2><%=Nombre%></h2>
          <b><%=TipUser%></b><br />
          <span><%=Empresa%></span>
        </div>
        <ul>
          <li><a href="#">Perfil</a></li>
          <li><a href="#">Tema</a></li>
          <li><a href="/logout">Cerrar Sesión</a></li>
        </ul>
      </div>
    </div>

    <%//Hacemos el cambio del primer nav dependiendo del tipo de usuario%> <%
    switch (ClaseUsuario){
    //==================================================================================================
    // Nav-SuperAdmin-->
    //==================================================================================================
    case 1: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="Agenda">
        <h2 class="nav-2">
          <img src="/img/Icons/Agenda.svg" class="icono" /> Agenda
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
      <!-- Inventario -->
      <div style="cursor: pointer" id="Inventario">
        <h2 class="nav-4">
          <img src="/img/Icons/Inventario.svg" class="icono" />
          Inventario
        </h2>
      </div>
      <!-- Ventas  -->
      <div style="cursor: pointer" id="Cortes">
        <h2 class="nav-5">
          <img src="/img/Icons/Corte.svg" class="icono" /> Cortes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Admin-->
    //==================================================================================================
    case 2: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="Agenda">
        <h2 class="nav-2">
          <img src="/img/Icons/Agenda.svg" class="icono" /> Agenda
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
      <!-- Ventas  -->
      <div style="cursor: pointer" id="Cortes">
        <h2 class="nav-5">
          <img src="/img/Icons/Corte.svg" class="icono" /> Cortes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Doctor-->
    //==================================================================================================
    case 3: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="Agenda">
        <h2 class="nav-2">
          <img src="/img/Icons/Agenda.svg" class="icono" /> Agenda
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Recepcionista-->
    //==================================================================================================
    case 4: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="Agenda">
        <h2 class="nav-2">
          <img src="/img/Icons/Agenda.svg" class="icono" /> Agenda
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
      <!-- Inventario -->
      <div style="cursor: pointer" id="Inventario">
        <h2 class="nav-4">
          <img src="/img/Icons/Inventario.svg" class="icono" />
          Inventario
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Recepcinista(Lite)-->
    //==================================================================================================
    case 5: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="Agenda">
        <h2 class="nav-2">
          <img src="/img/Icons/Agenda.svg" class="icono" /> Agenda
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Asociado-->
    //==================================================================================================
    case 6: %>
    <!-- Barra Sticky -->
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" />
          Dashboard
        </h2>
      </div>
      <!-- Pacientes -->
      <div style="cursor: pointer" id="Pacientes">
        <h2 class="nav-3">
          <img src="/img/Icons/Lupa.svg" class="icono" /> Pacientes
        </h2>
      </div>
    </section>
    <% break;
    //==================================================================================================
    // Nav-Coalquier otro usuario (Paciente)-->
    //==================================================================================================
    default:%>
    <section class="nav-bar">
      <!-- Dashboard -->
      <div style="cursor: pointer" id="Dashboard">
        <h2 class="nav-1">
          <img src="/img/Icons/DashBoard.svg" class="icono" /> Inicio
        </h2>
      </div>
      <!-- Agenda -->
      <div style="cursor: pointer" id="HistorialVistaPaciente">
        <h2 class="nav-2">
          <img src="/img/Icons/HistorialClinico.svg" class="icono" />
          Historial Clinico
        </h2>
      </div>
    </section>
    <%break; }
    //==================================================================================================
    // InfoDasboard (SuperAdmin, Admin y Doctor)-->
    //==================================================================================================
    switch (ClaseUsuario){ case 1: case 2: case 3:%>
    <script src="/js/dashDoc.js"></script>
    <h1>¡<%=saludo+" "+Nombre%>!</h1>
    <div class="contenido">
      <!-- Contenido de la Izquierda  -->
      <div class="Izquierda">
        <h2 class="Titulo">
          Registro de Entrada (<b class="NumeroPacientesEspera"></b>):
        </h2>
       
        <!-- Citas en Turno -->
        <div class="Entrada">
          <div class="PacientesEnEspera">
            <!-- Aqui van los usuarios en la sala de espera -->
          </div>
        </div>

        <!-- Otros Consultorios  -->
        <div class="OC">
          <h2>Otros Consultorios (<b class="NumeroOtrosConsultorios"></b>):</h2>
          <div class="Otros">
            <div class="ContenidoOtrosConsultorios">
              <!-- Aqui se genera el contenido de la tabla de otros consultorios -->
            </div>
          </div>
        </div>
      </div>
      <!-- Contenido de la derecha -->
      <div class="Derecha">
        <!-- Citas Confirmadas para hoy -->
        <h2 class="Titulo">
          Citas para hoy (<b class="NumeroPacientesCitasHoy"></b>):
        </h2>
        <div class="CCPH">
          <div class="Hoy">
            <div class="PacientesHoy">
              <!-- Aqui se genera el contenido de la tabla de citas para hoy -->
            </div>
          </div>
        </div>
        <!-- Citas Finalizadas -->
        <div class="CF">
          <h2>Citas Finalizadas (<b class="NumeroCitasFinalizadas"></b>):</h2>
          <div class="Finalizadas">
            <div class="ContenidoCitasFinalizadas">
              <!-- Aqui se genera el contenido de la tabla CitasFinalizadas -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <% break; case 4: %>
    <script src="/js/dashRecep.js"></script>
    <h1>Nuevo Paciente:</h1>
    <a href="/NuevoPaciente">NuevoPaciente</a>
    <h1>Pacientes Confirmados para hoy:</h1>
    <div class="ContenidoCitasHoyR"></div>

    <% break; case 5: %>
    <script src="/js/dashRecep.js"></script>

    <% break; case 6: %> <% break; default: %> <% break; }%>

    <!-- Copyright -->
    <div class="footer">
      <b> <%=Copy+" "+Empresa+" "+" "+Año+" v"+Ver %> </b>
    </div>
  </body>
</html>
