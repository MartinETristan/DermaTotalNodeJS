          <section class="region">
            <header class="region__header">
              <ul class="tablist">
                <li><a id="General" class="tablist__link">General</a></li>
                <li><a id="Historial" class="tablist__link">Historial</a></li>
                <li><a id="Recetas" class="tablist__link">Recetas</a></li>
